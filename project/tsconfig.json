{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
