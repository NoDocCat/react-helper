{
  "name": "root",
  "private": true,
  "workspaces": [
    "project",
    "site"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "lint:prettier": "prettier --check {**/*,*}.{js,ts,tsx,json,yml,md,mdx}",
    "lint:eslint": "eslint {**/*,*}.{js,ts,tsx} --ignore-path ./.prettierignore",
    "pub": "yarn build && lerna publish",
    "pub:docs": "yarn build && lerna run deploy --scope site"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,yml,md,mdx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  }
}
